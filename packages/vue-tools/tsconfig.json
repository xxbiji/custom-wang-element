{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES2015",
    "lib": ["DOM","ES6","ESNext"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "jsxFactory": "h",
    "downlevelIteration": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true
  },
  "include": [
    "src/*",
    "test/*"
  ],
  "exclude": [
    "node_modules"
  ]
}